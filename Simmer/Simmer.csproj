      </None>
      <None Update="json.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Serialization" />
    </ItemGroup>

</Project>
